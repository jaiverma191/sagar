package com.hiring.binary.tree;

import com.hiring.tree.BTreePrinter;
import com.hiring.tree.TreeNode;

public class BinarySearchTree {
	public static void main(String[] args) {

		int arr[] = { 5, 7, 3, 2, 4, 9, 1, 6 };
		TreeNode root = new TreeNode(arr[0]);

		for (int i = 1; i < arr.length; i++) {
			addNodeToTree(root, arr[i]);
		}
		BTreePrinter.printNode(root);
		deleteNode(root, 2);
		BTreePrinter.printNode(root);
	}

	private static void deleteNode(TreeNode root, int value) {
		TreeNode node = root;
		while (true && node != null) {
			if (value < node.value) {
				node = node.left;
			} else if (value > node.value) {
				node = node.right;
			} else {
				if (node.right == null && node.left == null) {
					node = null;
					return;
				}
				if (node.left == null) {
					node.value = node.right.value;
					node.right=null;
					return;
				}
				if (node.right == null) {
					node.value = node.left.value;
					return;
				}
			}
		}
	}

	private static void addNodeToTree(TreeNode root, int value) {
		TreeNode node = root;
		while (true) {
			if (value < node.value) {
				if (node.left == null) {
					TreeNode newNode = new TreeNode(value);
					node.left = newNode;
					return;
				}
				node = node.left;
			} else if (value > node.value) {
				if (node.right == null) {
					TreeNode newNode = new TreeNode(value);
					node.right = newNode;
					return;
				}
				node = node.right;
			} else {
				return;
			}
		}
	}

}
